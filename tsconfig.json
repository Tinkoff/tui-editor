{
    "extends": "@taiga-ui/tsconfig",
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist",
        "lib": ["es2021", "dom"],
        "target": "ES2017",
        "module": "ES2020",
        "useDefineForClassFields": false,
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "@tinkoff/tui-editor": ["./projects/editor/src"],
            "@taiga-ui/kit": ["./taiga-ui/projects/kit"],
            "@taiga-ui/kit/*": ["./taiga-ui/projects/kit/*"],
            "@taiga-ui/cdk": ["./taiga-ui/projects/cdk"],
            "@taiga-ui/cdk/*": ["./taiga-ui/projects/cdk/*"],
            "@taiga-ui/styles": ["./taiga-ui/projects/styles"],
            "@taiga-ui/styles/*": ["./taiga-ui/projects/styles/*"],
            "@taiga-ui/core": ["./taiga-ui/projects/core"],
            "@taiga-ui/core/*": ["./taiga-ui/projects/core/*"],
            "@taiga-ui/i18n": ["./taiga-ui/projects/i18n"],
            "@taiga-ui/i18n/*": ["./taiga-ui/projects/i18n/*"],
            "@taiga-ui/addon-doc": ["./taiga-ui/projects/addon-doc"],
            "@taiga-ui/addon-doc/*": ["./taiga-ui/projects/addon-doc/*"],
            "@taiga-ui/addon-preview": ["./taiga-ui/projects/addon-preview"],
            "@taiga-ui/addon-preview/*": ["./taiga-ui/projects/addon-preview/*"],
            "@taiga-ui/addon-mobile": ["./taiga-ui/projects/addon-mobile"],
            "@taiga-ui/addon-mobile/*": ["./taiga-ui/projects/addon-mobile/*"],
            "@taiga-ui/testing": ["./taiga-ui/projects/testing"],
            "@taiga-ui/testing/*": ["./taiga-ui/projects/testing/*"],
            "@taiga-ui/submodule-package": ["./taiga-ui/package.json"],
            "@taiga-ui/submodule-demo-package": ["./taiga-ui/projects/demo/package.json"],
            "@taiga-ui/submodule-cdk-package": ["./taiga-ui/projects/cdk/package.json"],
            "rxjs/*": ["node_modules/rxjs/*"],
            "rxjs": ["node_modules/rxjs"]
        }
    }
}
