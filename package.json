{
    "name": "tui-editor",
    "private": true,
    "description": "Rich text editor extension with related Taiga UI components",
    "keywords": [
        "wysiwyg",
        "text editor",
        "taiga ui",
        "prosemirror",
        "tiptap"
    ],
    "homepage": "https://taiga-family.github.io/tui-editor",
    "bugs": "https://github.com/taiga-family/tui-editor/issues",
    "repository": "https://github.com/taiga-family/tui-editor",
    "license": "Apache-2.0",
    "contributors": [
        "Alex Inkin <alexander@inkin.ru>"
    ],
    "workspaces": [
        "projects/*",
        "taiga-ui/*",
        "taiga-ui/projects/*"
    ],
    "scripts": {
        "postinstall": "husky install",
        "*** Workflow ***": "",
        "start": "nx serve editor-demo",
        "build": "nx run editor-demo:build:production",
        "test": "nx test",
        "submodule:update": "git submodule update --rebase --remote",
        "submodule:reset": "git submodule | awk '{ git restore --staged $2 }' && git submodule update --init --recursive",
        "*** Format ***": "",
        "lint": "eslint .",
        "prettier": "prettier !package-lock.json !taiga-ui/** . --ignore-path .gitignore",
        "format": "npm run prettier -- --write",
        "stylelint": "stylelint '**/*.{less,css}' --config package.json"
    },
    "commitlint": {
        "extends": [
            "@taiga-ui/commitlint-config"
        ]
    },
    "lint-staged": {
        "*.less": [
            "stylelint --fix"
        ],
        "*.{js,ts,html}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{svg,yml,md,less,json}": [
            "prettier --write"
        ]
    },
    "browserslist": [
        "extends @taiga-ui/browserslist-config"
    ],
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all",
            "plugin:@taiga-ui/experience/taiga-naming"
        ]
    },
    "eslintIgnore": [
        "taiga-ui"
    ],
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config"
        ],
        "rules": {
            "selector-class-pattern": "^(_.*)|(t-.*)|(tui-.*)|(ng-.*)|(ProseMirror.*)|(hljs.*)$"
        },
        "ignoreFiles": [
            "**/demo/**",
            "**/dist/**",
            "**/coverage/**",
            "**/node_modules/**"
        ]
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "16.0.1",
        "@angular-devkit/build-angular": "16.2.12",
        "@angular-devkit/core": "16.2.12",
        "@angular-devkit/schematics": "16.2.12",
        "@angular/animations": "16.2.12",
        "@angular/cdk": "16.2.14",
        "@angular/cli": "16.2.12",
        "@angular/common": "16.2.12",
        "@angular/compiler": "16.2.12",
        "@angular/compiler-cli": "16.2.12",
        "@angular/core": "16.2.12",
        "@angular/forms": "16.2.12",
        "@angular/language-service": "16.2.12",
        "@angular/platform-browser": "16.2.12",
        "@angular/platform-browser-dynamic": "16.2.12",
        "@angular/platform-server": "16.2.12",
        "@angular/router": "16.2.12",
        "@maskito/angular": "2.3.1",
        "@maskito/core": "2.3.1",
        "@maskito/kit": "2.3.1",
        "@ng-web-apis/common": "3.0.6",
        "@ng-web-apis/intersection-observer": "3.2.0",
        "@ng-web-apis/mutation-observer": "3.1.0",
        "@ng-web-apis/resize-observer": "3.0.6",
        "@ng-web-apis/universal": "3.0.7",
        "@nx/angular": "18.2.4",
        "@nx/jest": "18.2.4",
        "@nx/node": "18.2.4",
        "@nx/workspace": "18.2.4",
        "@playwright/test": "1.43.1",
        "@stackblitz/sdk": "1.9.0",
        "@swc-node/register": "1.9.0",
        "@swc/core": "1.4.14",
        "@swc/helpers": "0.5.10",
        "@taiga-ui/browserslist-config": "0.6.0",
        "@taiga-ui/commitlint-config": "0.7.4",
        "@taiga-ui/eslint-plugin-experience": "0.69.0",
        "@taiga-ui/prettier-config": "0.11.5",
        "@taiga-ui/stylelint-config": "0.20.5",
        "@taiga-ui/tsconfig": "0.17.0",
        "@tinkoff/ng-dompurify": "4.0.0",
        "@tinkoff/ng-event-plugins": "3.2.0",
        "@tinkoff/ng-polymorpheus": "4.3.0",
        "@types/dompurify": "3.0.5",
        "@types/express": "4.17.21",
        "@types/jasmine": "5.1.4",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.8",
        "@types/showdown": "2.0.6",
        "@types/webpack-env": "1.18.4",
        "core-js": "3.36.1",
        "dompurify": "3.1.2",
        "express": "4.19.2",
        "highlight.js": "11.5.1",
        "husky": "9.0.11",
        "jasmine": "5.1.0",
        "jest": "29.7.0",
        "jest-environment-jsdom": "29.7.0",
        "jest-preset-angular": "14.0.3",
        "lerna": "8.1.2",
        "lint-staged": "15.2.2",
        "local-web-server": "5.3.3",
        "marked": "12.0.2",
        "ng-morph": "4.0.6",
        "ng-packagr": "16.2.3",
        "ngx-highlightjs": "10.0.0",
        "nx": "18.2.4",
        "parse5": "7.1.2",
        "prettier": "3.2.5",
        "rxjs": "7.5.0",
        "showdown": "2.1.0",
        "stylelint": "16.3.1",
        "terser-webpack-plugin": "5.3.10",
        "text-mask-core": "5.1.2",
        "ts-jest": "29.1.2",
        "tslib": "2.6.2",
        "typescript": "5.0.4",
        "wait-on": "7.2.0",
        "webpack": "5.91.0",
        "zone.js": "0.13.3"
    },
    "engines": {
        "node": ">= 16",
        "npm": ">= 7",
        "yarn": "Please use npm instead of yarn to install dependencies"
    }
}
