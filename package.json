{
    "name": "tui-editor",
    "private": true,
    "description": "Rich text editor extension with related Taiga UI components",
    "keywords": [
        "wysiwyg",
        "text editor",
        "taiga ui",
        "prosemirror",
        "tiptap"
    ],
    "homepage": "https://taiga-family.github.io/tui-editor",
    "bugs": "https://github.com/taiga-family/tui-editor/issues",
    "repository": "https://github.com/taiga-family/tui-editor",
    "license": "Apache-2.0",
    "contributors": [
        "Alex Inkin <alexander@inkin.ru>",
        "Maksim Ivanov <splincodewd@yandex.ru>"
    ],
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "scripts": {
        "postinstall": "husky install && ngcc --async",
        "*** Workflow ***": "",
        "start": "nx run demo:serve",
        "build": "nx run demo:build:production",
        "test": "nx test",
        "test:e2e": "nx e2e-ui demo-cypress",
        "*** Format ***": "",
        "lint": "eslint .",
        "prettier": "prettier '**/*.{svg,yml,js,ts,html,md,less,json}'",
        "format": "npm run prettier -- --write",
        "stylelint": "stylelint '**/*.{less,css}' --config package.json",
        "typecheck": "tsc --noEmit --skipLibCheck --incremental false --tsBuildInfoFile null --project tsconfig.spec.json",
        "*** Cypress ***": "",
        "cy:open": "cypress open --project apps/demo-cypress/",
        "cy:run": "cypress run --project apps/demo-cypress/"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,ts,html,md,less,json}": [
            "npm run lint -- --fix",
            "prettier --write",
            "git add"
        ],
        "*.less": [
            "stylelint --fix",
            "git add"
        ]
    },
    "prettier": "@taiga-ui/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:@taiga-ui/experience/all"
        ]
    },
    "stylelint": {
        "extends": [
            "@taiga-ui/stylelint-config/taiga"
        ],
        "ignoreFiles": [
            "**/demo/**",
            "**/dist/**",
            "**/coverage/**",
            "**/node_modules/**"
        ]
    },
    "devDependencies": {
        "@angular-builders/custom-webpack": "12.1.3",
        "@angular-devkit/build-angular": "12.2.18",
        "@angular-devkit/core": "12.2.18",
        "@angular-devkit/schematics": "12.2.18",
        "@angular-devkit/schematics-cli": "0.1102.19",
        "@angular/animations": "12.2.17",
        "@angular/cdk": "12.2.13",
        "@angular/cli": "12.2.18",
        "@angular/common": "12.2.17",
        "@angular/compiler": "12.2.17",
        "@angular/compiler-cli": "12.2.17",
        "@angular/core": "12.2.17",
        "@angular/forms": "12.2.17",
        "@angular/language-service": "12.2.17",
        "@angular/platform-browser": "12.2.17",
        "@angular/platform-browser-dynamic": "12.2.17",
        "@angular/platform-server": "12.2.17",
        "@angular/router": "12.2.17",
        "@commitlint/cli": "16.3.0",
        "@commitlint/config-conventional": "16.2.4",
        "@ng-web-apis/common": "3.0.2",
        "@ng-web-apis/universal": "3.0.3",
        "@nx/jest": "16.8.1",
        "@nx/node": "16.8.1",
        "@nx/workspace": "16.8.1",
        "@stackblitz/sdk": "1.9.0",
        "@taiga-ui/addon-doc": "3.43.0",
        "@taiga-ui/addon-mobile": "3.43.0",
        "@taiga-ui/addon-preview": "3.43.0",
        "@taiga-ui/cdk": "3.43.0",
        "@taiga-ui/core": "3.43.0",
        "@taiga-ui/eslint-plugin-experience": "0.6.5",
        "@taiga-ui/icons": "3.43.0",
        "@taiga-ui/kit": "3.43.0",
        "@taiga-ui/prettier-config": "0.2.1",
        "@taiga-ui/stylelint-config": "0.4.0",
        "@taiga-ui/styles": "3.43.0",
        "@taiga-ui/testing": "3.43.0",
        "@testing-library/cypress": "9.0.0",
        "@tinkoff/ng-dompurify": "3.0.0",
        "@types/cypress-image-snapshot": "3.1.7",
        "@types/dompurify": "2.4.0",
        "@types/express": "4.17.17",
        "@types/jest": "28.1.8",
        "@types/markdown-it": "12.2.3",
        "@types/node": "18.17.14",
        "@types/showdown": "2.0.1",
        "angular-http-server": "1.12.0",
        "core-js": "2.6.12",
        "cypress": "12.17.4",
        "cypress-image-snapshot": "4.0.1",
        "dompurify": "2.4.7",
        "eslint": "8.49.0",
