{
    "extends": "./tsconfig.json",
    "exclude": ["**/*.spec.ts"],
    "compilerOptions": {
        "outDir": "./dist/out-tsc/lib",
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "paths": {
            "@tbank/tui-editor": ["./dist/tui-editor"],
            "@taiga-ui/kit": ["./taiga-ui/dist/kit"],
            "@taiga-ui/kit/*": ["./taiga-ui/dist/kit/*"],
            "@taiga-ui/cdk": ["./taiga-ui/dist/cdk"],
            "@taiga-ui/cdk/*": ["./taiga-ui/dist/cdk/*"],
            "@taiga-ui/core": ["./taiga-ui/dist/core"],
            "@taiga-ui/core/*": ["./taiga-ui/dist/core/*"],
            "@taiga-ui/i18n": ["./taiga-ui/dist/i18n"],
            "@taiga-ui/i18n/*": ["./taiga-ui/dist/i18n/*"],
            "@taiga-ui/legacy": ["./taiga-ui/dist/legacy"],
            "@taiga-ui/legacy/*": ["./taiga-ui/dist/legacy/*"]
        }
    }
}
