{
    "extends": "./tsconfig.json",
    "exclude": ["**/*.spec.ts"],
    "compilerOptions": {
        "outDir": "./dist/out-tsc/lib",
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "paths": {
            "@tbank/tui-editor/*": ["./dist/tui-editor/*"],
            "@tbank/tui-editor": ["./dist/tui-editor/index"],
            "@taiga-ui/kit": ["./taiga-ui/dist/kit/index"],
            "@taiga-ui/kit/*": ["./taiga-ui/dist/kit/*"],
            "@taiga-ui/cdk": ["./taiga-ui/dist/cdk/index"],
            "@taiga-ui/cdk/*": ["./taiga-ui/dist/cdk/*"],
            "@taiga-ui/core": ["./taiga-ui/dist/core/index"],
            "@taiga-ui/core/*": ["./taiga-ui/dist/core/*"],
            "@taiga-ui/i18n": ["./taiga-ui/dist/i18n/index"],
            "@taiga-ui/i18n/*": ["./taiga-ui/dist/i18n/*"]
        }
    }
}
