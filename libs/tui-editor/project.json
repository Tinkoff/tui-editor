{
    "name": "tui-editor",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/tui-editor",
    "projectType": "library",
    "prefix": "tui",
    "targets": {
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint --no-error-on-unmatched-pattern \"**/libs/tui-editor/**/*\""
            }
        },
        "stylelint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "stylelint \"**/tui-editor/**/*.{css,less}\" --allow-empty-input"
            }
        },
        "build": {
            "executor": "@angular-devkit/build-angular:ng-packagr",
            "outputs": ["{workspaceRoot}/dist/tui-editor"],
            "options": {
                "tsConfig": "tsconfig.build.json",
                "project": "libs/tui-editor/ng-package.json"
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/tui-editor"],
            "options": {
                "jestConfig": "libs/tui-editor/jest.config.ts"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish ./dist/tui-editor --ignore-scripts || echo \"already published\""
            }
        }
    }
}
