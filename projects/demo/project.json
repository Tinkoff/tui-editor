{
    "name": "editor-demo",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "projects/demo/src",
    "prefix": "app",
    "targets": {
        "prebuild": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd taiga-ui && npx nx build i18n --output-style=stream"
            }
        },
        "build": {
            "executor": "@nx/angular:webpack-browser",
            "options": {
                "allowedCommonJsDependencies": ["@tinkoff/ng-dompurify", "dompurify", "showdown", "text-mask-core"],
                "customWebpackConfig": {
                    "path": "projects/demo/webpack.config.ts"
                },
                "baseHref": "/",
                "outputPath": "dist/demo/browser",
                "index": "projects/demo/src/index.html",
                "main": "projects/demo/src/main.ts",
                "polyfills": "projects/demo/src/polyfills.ts",
                "tsConfig": "projects/demo/tsconfig.app.json",
                "assets": [
                    "projects/demo/src/404.html",
                    {
                        "glob": "**/*",
                        "input": "projects/demo/src/assets/",
                        "output": "./assets/"
                    },
                    {
                        "glob": "**/*",
                        "input": "taiga-ui/projects/icons/src",
                        "output": "assets/taiga-ui/icons"
                    }
                ],
                "styles": [
                    "taiga-ui/projects/core/styles/taiga-ui-theme.less",
                    "taiga-ui/projects/core/styles/taiga-ui-fonts.less",
                    "projects/demo/src/styles.less"
                ],
                "scripts": [],
                "aot": true,
                "vendorChunk": true,
                "extractLicenses": false,
                "buildOptimizer": false,
                "sourceMap": true,
                "optimization": false,
                "namedChunks": true
            },
            "configurations": {
                "production": {
                    "fileReplacements": [
                        {
                            "replace": "projects/demo/src/environments/environment.ts",
                            "with": "projects/demo/src/environments/environment.prod.ts"
                        }
                    ],
                    "baseHref": "./",
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "aot": true,
                    "extractLicenses": true,
                    "vendorChunk": false,
                    "buildOptimizer": true
                },
                "development": {}
            },
            "defaultConfiguration": "production",
            "dependsOn": [
                {
                    "target": "prebuild",
                    "params": "ignore"
                }
            ]
        },
        "serve": {
            "executor": "@nx/angular:dev-server",
            "options": {
                "buildTarget": "demo:build",
                "port": 3333,
                "sslCert": ".ssl/localhost.pem",
                "sslKey": ".ssl/localhost-key.pem"
            },
            "configurations": {
                "production": {
                    "buildTarget": "editor-demo:build:production"
                },
                "development": {
                    "buildTarget": "editor-demo:build:development"
                }
            },
            "defaultConfiguration": "development"
        },
        "serve-compiled": {
            "executor": "nx:run-commands",
            "options": {
                "command": "http-server {args.path} --port {args.port} > /dev/null & npx wait-on http://127.0.0.1:{args.port} --timeout 300000",
                "forwardAllArgs": false
            }
        }
    }
}
