{
    "name": "editor",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "projects/editor",
    "projectType": "library",
    "prefix": "tui",
    "targets": {
        "lint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "eslint --no-error-on-unmatched-pattern \"**/projects/editor/**/*\""
            }
        },
        "stylelint": {
            "executor": "nx:run-commands",
            "options": {
                "command": "stylelint \"**/editor/**/*.{css,less}\" --allow-empty-input"
            }
        },
        "prebuild": {
            "executor": "nx:run-commands",
            "options": {
                "command": "cd taiga-ui && npx nx run-many -t build -p i18n cdk core kit --parallel=false --output-style=stream"
            }
        },
        "build": {
            "executor": "@angular-devkit/build-angular:ng-packagr",
            "outputs": ["{workspaceRoot}/dist/editor"],
            "options": {
                "tsConfig": "tsconfig.build.json",
                "project": "projects/editor/ng-package.json"
            },
            "dependsOn": [
                {
                    "target": "prebuild",
                    "params": "ignore"
                }
            ]
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/editor"],
            "options": {
                "jestConfig": "projects/editor/jest.config.ts"
            }
        },
        "publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "npm publish --tag {args.tag} ./dist/editor --access=public --ignore-scripts || echo \"already published\""
            }
        }
    }
}
